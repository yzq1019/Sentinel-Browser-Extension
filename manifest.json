{
  "manifest_version": 3,
  "name": "Sentinel Website Rating",
  "version": "1.0",
  "description": "Open source moderation for a safe Internet",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["rating_template.json", "rating_schema.json"],
      "matches": ["<all_urls>"]
    }
  ]
} 

